git remote add upstream https://github.com/maklicek/sscc-zdroj.git
git fetch upstream
git checkout main
git merge upstream/main
git push origin main

// assets/js/staging.js  (POUZE v sscc-preview)
(function(){
  // Označ všechny karty kromě první jako WIP
  var cards = document.querySelectorAll('.project');
  cards.forEach(function(card, i){
    if(i > 0){
      card.classList.add('wip');
    }
  });

  // Info banner pro tým (volitelné, samo zmizí)
  var info = document.createElement('div');
  info.textContent = 'Náhled: některé projekty jsou ve vývoji. Odkazy dočasně vypnuté.';
  Object.assign(info.style, {
    position:'fixed', left:'50%', transform:'translateX(-50%)',
    bottom:'14px', zIndex:9999, color:'#102a1e',
    background:'#c0f5d3', padding:'8px 14px', borderRadius:'10px',
    boxShadow:'0 8px 20px rgba(0,0,0,.28)', font:'600 12px/1.2 Inter, system-ui, sans-serif'
  });
  document.body.appendChild(info);
  setTimeout(function(){ info.remove(); }, 5200);
})();
<script src="assets/js/staging.js" defer></script>
